<%= form_for(@job) do |f| %>
	<%= fields_for :company do |f2| %>
	<p><%= f2.label :name, "Company" %> : <%= f2.text_field :name %></p>
	<% end %> 
	
	<p><%= f.label :position, "Position" %> : <%= f.text_field :title %></p>
	<p><%= f.label :start_date, "Start date" %> : <%= f.text_field :start_date %> <%=f.label :end_date, "End date" %> : <%= f.text_field :end_date %></p>
	<p><%= f.label :description, "Description" %> : <%= f.text_area :description %></p>
	

	<p><%= f.submit %></p>
<% end %>